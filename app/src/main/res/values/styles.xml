<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BtnCalcStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="BtnCalcNumberStyle" parent="BtnCalcStyle">
        <item name="android:background">#292929</item>
    </style>

    <style name="BtnCalcOperatorStyle" parent="BtnCalcStyle">
        <item name="android:background">#161616</item>
    </style>

</resources>
